<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Admit One</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        {{#if session.isAuthenticated }}<li>{{#link-to 'profile'}}{{ session.username }}{{/link-to}}</li>{{/if}}
        <li>{{#if session.isAuthenticated }}{{#link-to 'logout'}}Logout{{/link-to}}{{else}}{{#link-to 'login'}}Login{{/link-to}}{{/if}}</li>
      </ul>
    </div>

  <div class="content">
    <h1>Flowing Taps</h1>

      <form {{action 'post' on='submit'}}>
        {{input class= "pourBox" type="post" required="true" autofocus="true" placeholder="Create a pour." value=content}}
        <br><button name="submit" type="submit">Save a tap</button>
        {{#if error}}<div>Error: {{error}}.</div>{{/if}}
      </form>

    {{outlet}}
  </div>
  </div>
</div>


